SPEAR:
  LAUNCH_MODE: "standalone_executable"
  STANDALONE_EXECUTABLE: "/Users/mroberts/code/github/spear/cpp/unreal_projects/SpearSim/Standalone-Shipping/MacNoEditor/SpearSim-Mac-Shipping.app"
  # STANDALONE_EXECUTABLE: "/Users/mroberts/code/github/spear/cpp/unreal_projects/SpearSim/Standalone-Development/MacNoEditor/SpearSim.app"

  DATA_DIR: "/Users/mroberts/Downloads/spear_data/v7/mac"
  CONTENT_DIR: "/Users/mroberts/code/github/spear/cpp/unreal_projects/SpearSim/Standalone-Shipping/MacNoEditor/SpearSim-Mac-Shipping.app/Contents/UE4/SpearSim/Content"
  # CONTENT_DIR: "/Users/mroberts/code/github/spear/cpp/unreal_projects/SpearSim/Standalone-Development/MacNoEditor/SpearSim.app/Contents/UE4/SpearSim/Content"

  CUSTOM_COMMAND_LINE_ARGUMENTS: []
  RENDER_OFFSCREEN: False
  WINDOW_RESOLUTION_X: 1024
  WINDOW_RESOLUTION_Y: 768

SIMULATION_CONTROLLER:
  TASK: "NullTask"
  AGENT: "CameraAgent"
  CUSTOM_UNREAL_CONSOLE_COMMANDS: []

  CAMERA_SENSOR:
    FINAL_COLOR_INDIRECT_LIGHTING_INTENSITY: 0.0 # set to 0.0 on Windows for ray-traced global illumination, set to 1.0 on macOS and Linux to use baked lighting

  CAMERA_AGENT:
    ACTION_COMPONENTS: ["set_pose", "set_num_random_points"] # "set_pose", "set_num_random_points"
    OBSERVATION_COMPONENTS: ["camera"] # "camera"
    STEP_INFO_COMPONENTS: ["random_points"] # "random_points"
    CAMERA:
      ACTOR_NAME: "GenerateImageDatasetCamera"
      RENDER_PASSES: ["final_color"] # "final_color", "segmentation", "depth_glsl", "normals", "lens_distortion" 
      IMAGE_HEIGHT: 768
      IMAGE_WIDTH: 1024
      FOV: 90.0
    NAVMESH:
      AGENT_RADIUS: 5.0
      AGENT_HEIGHT: 180.0
      CELL_SIZE: 1.0
      CELL_HEIGHT: 1.0
      AGENT_MAX_STEP_HEIGHT: 1.0
      AGENT_MAX_SLOPE: 1.0
      MERGE_REGION_SIZE: 0.0
      MIN_REGION_AREA: 100.0
      TILE_SIZE_UU: 300
      TILE_POOL_SIZE: 1024
      MAX_SIMPLIFICATION_ERROR: 1.3
      NAV_MODIFIER_OFFSET_Z: 50.0
      WORLD_BOUND_TAG_NAMES: ["architecture", "furniture"]

  VISUALIZER:
    ACTOR_NAME: "GenerateImageDatasetCamera"
    SPAWN_CAMERA: False
