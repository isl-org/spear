SIMULATION_CONTROLLER:
  TASK: "NullTask"
  AGENT: "CameraAgent"

  CAMERA_AGENT:
    ACTION_COMPONENTS: ["set_pose", "set_num_random_points"] # "set_pose", "set_num_random_points"
    OBSERVATION_COMPONENTS: ["camera"] # "camera"
    STEP_INFO_COMPONENTS: ["random_points"] # "random_points"
    CAMERA:
      ACTOR_NAME: "GenerateImageDatasetCamera"
      RENDER_PASSES: ["final_color", "segmentation", "depth_glsl", "normals", "lens_distortion"] # "final_color", "segmentation", "depth_glsl", "normals", "lens_distortion"
      IMAGE_HEIGHT: 720
      IMAGE_WIDTH: 1024
      FOV: 90.0
    NAVMESH:
      AGENT_RADIUS: 5.0
      AGENT_HEIGHT: 180.0
      CELL_SIZE: 1.0
      CELL_HEIGHT: 1.0
      AGENT_MAX_STEP_HEIGHT: 1.0
      AGENT_MAX_SLOPE: 1.0
      MERGE_REGION_SIZE: 0.0
      MIN_REGION_AREA: 100.0
      TILE_SIZE_UU: 300
      TILE_POOL_SIZE: 1024
      MAX_SIMPLIFICATION_ERROR: 1.3
      NAV_MODIFIER_OFFSET_Z: 40.0
      WORLD_BOUND_TAG_NAMES: ["architecture", "furniture"]

  VISUALIZER:
    ACTOR_NAME: "GenerateImageDatasetCamera"
    SPAWN_CAMERA: False
